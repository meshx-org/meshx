{
    "name": "tools/nx-pack",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "tools/nx-pack/src",
    "projectType": "library",
    "implicitDependencies": ["src/sys/pkg/bin/package-tool"],
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "inputs": ["{workspaceRoot}/dist/sys/pkg/bin/package-tool/*"],
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/tools/nx-pack",
                "main": "tools/nx-pack/src/index.ts",
                "tsConfig": "tools/nx-pack/tsconfig.lib.json",
                "assets": [
                    "tools/nx-pack/*.md",
                    {
                        "input": "./tools/nx-pack/src",
                        "glob": "**/!(*.ts)",
                        "output": "./src"
                    },
                    {
                        "input": "./tools/nx-pack/src",
                        "glob": "**/*.d.ts",
                        "output": "./src"
                    },
                    {
                        "input": "./tools/nx-pack",
                        "glob": "generators.json",
                        "output": "."
                    },
                    {
                        "input": "./tools/nx-pack",
                        "glob": "executors.json",
                        "output": "."
                    }
                ]
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["tools/nx-pack/**/*.ts", "tools/nx-pack/package.json"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "tools/nx-pack/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": []
}
